# ============================
#   Makefile ‚Äì Projet IRC
# ============================

# Nom de l'ex√©cutable
NAME        = irc_server

# Dossiers
SRCDIR      = src
INCDIR      = include
OBJDIR      = obj

# Compilateur & flags
CXX         = c++
CXXFLAGS    = -Wall -Wextra -Werror -std=c++98 -I$(INCDIR) -MMD -MP
LDFLAGS     =

# Sources / Objets / D√©pendances (auto)
SRCS        = $(wildcard $(SRCDIR)/*.cpp)
OBJS        = $(patsubst $(SRCDIR)/%.cpp,$(OBJDIR)/%.o,$(SRCS))
DEPS        = $(OBJS:.o=.d)

# Couleurs (optionnel)
GREEN       = \033[1;32m
RED         = \033[1;31m
YELLOW      = \033[1;33m
RESET       = \033[0m

# ============================
#   R√®gles
# ============================

all: $(NAME)

$(NAME): $(OBJS)
	@echo "$(YELLOW)üîß √âdition des liens...$(RESET)"
	@$(CXX) $(OBJS) $(LDFLAGS) -o $(NAME)
	@echo "$(GREEN)‚úÖ Build OK : $(NAME)$(RESET)"

# Compilation des .cpp -> .o (avec g√©n√©ration des .d)
$(OBJDIR)/%.o: $(SRCDIR)/%.cpp
	@mkdir -p $(OBJDIR)
	@$(CXX) $(CXXFLAGS) -c $< -o $@
	@echo "$(GREEN)‚úî $<$(RESET)"

clean:
	@echo "$(RED)üßπ Suppression des objets...$(RESET)"
	@rm -f $(OBJS) $(DEPS)

fclean: clean
	@echo "$(RED)üóë Suppression de l'ex√©cutable...$(RESET)"
	@rm -f $(NAME)

re: fclean all

# Ex√©cuter le binaire (facultatif)
run: $(NAME)
	@./$(NAME)

# Inclure les d√©pendances g√©n√©r√©es (silencieusement si absentes)
-include $(DEPS)

.PHONY: all clean fclean re run
